#################################################################################
# TERRAFORM
#################################################################################

terraform {
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~>4.22.0"
    }
  }
}

#################################################################################
# PROVIDERS
#################################################################################

provider "aws" {
  # Creds
  profile = "Lab02 - 2x VPC"
  region  = "us-east-1"
}

#################################################################################
# DATA
#################################################################################

#################################################################################
# OUTPUTS
#################################################################################

# VPC1 ID
output "vpc_10_56_0_0_id" {
  value = aws_vpc.vpc.id
}

# VPC2 ID
output "vpc_10_44_0_0_id" {
  value = aws_vpc.vpc2.id
}

#################################################################################
# RESOURCES
#################################################################################

resource "aws_vpc" "vpc" {
  cidr_block = "10.56.0.0/16"

  tags = {
    # VPC Name
    "Name" = "VPC1_cidr_10.56.0.0/16"
  }
}

resource "aws_vpc" "vpc2" {
  cidr_block = "10.44.0.0/16"

  tags = {
    # VPC Name
    "Name" = "VPC2_cidr_10.44.0.0/16"
  }
}
